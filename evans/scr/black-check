#! /usr/bin/env python
import os
from return_directories import return_directories


def black_check():
    print("black checking Scores ...")
    for score in return_directories():
        print(f"Checking {score.name} ...")
        os.system(f"black --check --diff --line-length 90 --target-version py36 {score}")
        print()

if __name__ == "__main__":
    black_check()
